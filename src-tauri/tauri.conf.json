{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "微博登录助手",
  "version": "0.1.0",
  "identifier": "com.codeartisan.weibologin",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "微博登录助手",
        "width": 600,
        "height": 700,
        "minWidth": 500,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
